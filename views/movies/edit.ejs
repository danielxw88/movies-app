<%- include('../partials/header', { title: "Edit Movie" }) %>

<h1>Edit Movie</h1>

<form action="/movies/<%= movie._id %>?_method=PUT" method="POST">

    <% if (errors && errors.length > 0) { %>
        <ul style="color:red;">
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    <% } %>

    <label>Name:</label>
    <input type="text" name="name" value="<%= movie.name %>" required>

    <label>Description:</label>
    <textarea name="description" required><%= movie.description %></textarea>

    <label>Year:</label>
    <input type="number" name="year" value="<%= movie.year %>" required>

    <label>Genres:</label>
    <input type="text" name="genres" value="<%= movie.genres %>" required>

    <label>Rating:</label>
    <input type="number" name="rating" min="1" max="10" value="<%= movie.rating %>" required>

    <label>Director:</label>
    <input type="text" name="director" value="<%= movie.director %>">

    <button type="submit">Update Movie</button>
</form>

<%- include('../partials/footer') %>
